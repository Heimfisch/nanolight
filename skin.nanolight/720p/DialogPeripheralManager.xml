<window id="10149">
	<defaultcontrol>20</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<include>GlobalOverlay</include>
		<control type="group">
            <posx>880</posx>
            <posy>0</posy>
            <animation type="WindowOpen">
                <effect type="slide" time="300" start="+400, 0" end="0,0" easing="out" tween="cubic" />
            </animation>
            <animation type="WindowClose">
                <effect type="slide" time="300" start="0,0" end="+400,0" easing="in" tween="cubic" />
            </animation>
            <animation type="Hidden">
                <effect type="slide" time="300" start="0,0" end="+400,0" easing="in" tween="cubic" />
            </animation>
            <animation type="Visible">
                <effect type="slide" time="300" start="+400, 0" end="0,0" easing="out" tween="cubic" />
            </animation>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>400</width>
                <height>720</height>
                <texture border="22">button.png</texture>
            </control>
			<control type="label" id="1">
				<description>Header Label</description>
				<posx>30</posx>
                <posy>70</posy>
                <width>400</width>
                <align>left</align>
                <font>Home_sub_header</font>
                <textcolor>black</textcolor>
				<label>[LOWERCASE]$LOCALIZE[31736][/LOWERCASE]</label>
			</control>
			<control type="list" id="20">
				<description>Control Area</description>
				<posx>30</posx>
                <posy>180</posy>
                <width>340</width>
                <height>450</height>
				<onleft>10</onleft>
				<onright>10</onright>
				<onup>20</onup>
				<ondown>20</ondown>
				<itemlayout width="0" height="50">
					<control type="image">
                        <width>340</width>
                        <height>45</height>
                        <texture>other_textures/buttonnf.png</texture>
                    </control>
					<control type="label">
						<posx>10</posx>
						<width>320</width>
						<height>45</height>
						<label>[B]$INFO[ListItem.Label][/B] ($INFO[ListItem.Property(Vendor)]:$INFO[ListItem.Property(Product)] - $INFO[ListItem.Property(Class)])</label>
						<scroll>false</scroll>
						<textcolor>Black</textcolor>
					</control>
				</itemlayout>
				<focusedlayout width="0" height="50">
					<control type="image">
                        <width>340</width>
                        <height>45</height>
                        <texture>other_textures/buttonfo.png</texture>
                        <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(20)">Conditional</animation>
                    </control>
					<control type="label">
						<posx>10</posx>
						<width>320</width>
						<height>45</height>
						<scrollout>false</scrollout>
						<pauseatend>1800</pauseatend>
						<scrollspeed>40</scrollspeed>
						<scroll>true</scroll>
						<textcolor>White</textcolor>
						<label>[B]$INFO[ListItem.Label][/B] ($INFO[ListItem.Property(Vendor)]:$INFO[ListItem.Property(Product)] - $INFO[ListItem.Property(Class)])</label>
					</control>
				</focusedlayout>
			</control>
			<control type="group" id="9000">
				<posx>30</posx>
                <posy>660</posy>
				<control type="button" id="10">
					<description>Ok</description>
					<width>340</width>
					<label>$LOCALIZE[186]</label>
					<onleft>20</onleft>
					<onright>20</onright>
					<onup>20</onup>
					<ondown>20</ondown>
					<textcolor>black</textcolor>
				</control>
			</control>
		</control>
	</controls>
</window>

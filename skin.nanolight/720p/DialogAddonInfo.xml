<?xml version="1.0" encoding="utf-8"?>
<window id="146">
    <defaultcontrol always="true">9000</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <include>GlobalOverlay</include>
        <control type="group">
            <posx>880</posx>
            <posy>0</posy>
            <visible>!Window.IsVisible(AddonSettings) + !Window.IsActive(TextViewer)</visible>
            <animation type="WindowOpen">
                <effect type="slide" time="300" start="+400, 0" end="0,0" easing="out" tween="cubic" />
            </animation>
            <animation type="WindowClose">
                <effect type="slide" time="300" start="0,0" end="+400,0" easing="in" tween="cubic" />
            </animation>
            <animation type="Hidden">
                <effect type="slide" time="300" start="0,0" end="+400,0" easing="in" tween="cubic" />
            </animation>
            <animation type="Visible">
                <effect type="slide" time="300" start="+400, 0" end="0,0" easing="out" tween="cubic" />
            </animation>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>440</width>
                <height>720</height>
                <texture border="22">button.png</texture>
            </control>
            <control type="fadelabel">
                <description>Menu Title</description>
                <posx>30</posx>
                <posy>70</posy>
                <width>370</width>
                <label>$INFO[ListItem.Property(Addon.Name)]</label>
                <font>Home_sub_header</font>
                <align>left</align>
                <textcolor>black</textcolor>
            </control>
            <control type="group">
                <posx>30</posx>
                <posy>180</posy>
                <width>340</width>
                <control type="grouplist" id="9000">
                    <width>340</width>
                    <height>230</height>
                    <itemgap>2</itemgap>
                    <onup>9000</onup>
                    <ondown>9000</ondown>
                    <onright>50</onright>
                    <onleft>50</onleft>
                    <orientation>vertical</orientation>
                    <control type="button" id="6">
                        <description>Enable Addon button</description>
                        <width>340</width>
                        <label>24022</label>
                        <textcolor>black</textcolor>
                        <align>right</align>
                    </control>
                    <control type="button" id="7">
                        <description>Disable Addon button</description>
                        <width>340</width>
                        <label>24021</label>
                        <textcolor>black</textcolor>
                        <align>right</align>
                    </control>
                    <control type="button" id="9">
                        <description>Addon Settings</description>
                        <width>340</width>
                        <label>24020</label>
                        <textcolor>black</textcolor>
                        <align>right</align>
                        <onfocus>SetProperty(addon,$INFO[ListItem.Property(Addon.Name)],10140)</onfocus>
                    </control>
                    <control type="button" id="8">
                        <description>Update Addon button</description>
                        <width>340</width>
                        <label>24069</label>
                        <textcolor>black</textcolor>
                        <align>right</align>
                    </control>
                    <control type="button" id="10">
                        <description>Changelog button</description>
                        <width>340</width>
                        <label>24036</label>
                        <textcolor>black</textcolor>
                        <align>right</align>
                    </control>
                </control>
                <control type="textbox">
                    <posy>420</posy>
                    <description>Disclaimer</description>
                    <width>340</width>
                    <height>95</height>
                    <label>$INFO[ListItem.Property(Addon.Disclaimer),[B]$LOCALIZE[24052]:[/B] ]</label>
                    <autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
                    <visible>!IsEmpty(ListItem.Property(Addon.Disclaimer))</visible>
                    <textcolor>black</textcolor>
                </control>
                <control type="group">
                    <visible>!IsEmpty(ListItem.Property(Addon.Broken))</visible>
                    <posy>280</posy>
                    <control type="textbox">
                        <description>Reason label</description>
                        <width>340</width>
                        <height>95</height>
                        <label>$INFO[ListItem.Property(Addon.Broken),[B]$LOCALIZE[24098]:[/B] ]</label>
                        <align>justify</align>
                        <autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
                        <textcolor>black</textcolor>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>